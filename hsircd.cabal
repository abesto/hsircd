name:              hsircd
version:           1.0
Build-Type:        Simple
cabal-version:     >= 1.2

executable hsircd
  main-is:         Main.hs
  hs-source-dirs:  src
  build-depends:   base
                 , parsec
                 , text
                 , network
                 , stm
                 , containers

test-suite hsircd-tests
  type:              exitcode-stdio-1.0
  hs-source-dirs:    src, tests
  main-is:           TestSuite.hs
  build-depends:     base
                   , HUnit
                   , tasty
                   , tasty-hunit

